<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/white">


    <ImageView
        android:id="@+id/home_detect_button"
        android:layout_width="350dp"
        android:layout_height="270dp"
        android:src="@drawable/detect_button"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </ImageView>

    <ImageView
        android:id="@+id/home_community_button"
        android:src="@drawable/community_button"
        android:layout_width="170dp"
        android:layout_height="230dp"
        android:layout_marginTop="270dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/home_info_button">
    </ImageView>

    <ImageView
        android:id="@+id/home_info_button"
        android:src="@drawable/info_button"
        android:layout_width="170dp"
        android:layout_height="230dp"
        android:layout_marginTop="270dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/home_community_button"
        app:layout_constraintRight_toRightOf="parent">
    </ImageView>

    <ImageView
        android:id="@+id/home_profile_button"
        android:src="@drawable/profile_button"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="500dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </ImageView>

    <ImageView
        android:id="@+id/home_faq_button"
        android:src="@drawable/faq_button"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="600dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
    </ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>
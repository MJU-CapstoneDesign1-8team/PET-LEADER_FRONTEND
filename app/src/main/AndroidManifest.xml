<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.tensorflow.lite.examples.detect">

    <uses-sdk />
    <!-- Tell the system this app requires OpenGL ES 3.1. -->
    <uses-feature
        android:glEsVersion="0x00030001"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <application
        android:allowBackup="false"
        android:debuggable="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:installLocation="internalOnly"
        android:label="@string/tfe_od_app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.ObjectDetection"
        android:usesCleartextTraffic="true"
        tools:ignore="HardcodedDebugMode">
        <activity
            android:name=".camera.VerifyVideoActivity"
            android:exported="true" />
        <activity
            android:name=".camera.VerifyImageActivity"
            android:exported="true" />
        <activity
            android:name=".camera.DeepLearningResultActivity"
            android:exported="false" />
        <activity
            android:name=".camera.ImageActivity"
            android:exported="false" />
        <activity
            android:name=".camera.VideoActivity"
            android:exported="true" />
        <activity
            android:name=".community.BoardCreateActivity"
            android:exported="false" />
        <activity
            android:name=".community.BoardDetailActivity"
            android:exported="false" />
        <activity
            android:name=".DetectChoiceActivity"
            android:exported="true" />
        <activity
            android:name=".community.CommunityActivity"
            android:exported="true" />
        <activity
            android:name=".network.VerificationActivity"
            android:exported="true" />
        <activity
            android:name=".onboard.OnBoardActivity"
            android:exported="true" />
        <activity
            android:name=".login.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".profile.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".faq.FaqActivity"
            android:exported="false" />
        <activity
            android:name=".yolov5.DetectorActivity"
            android:exported="false" />
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:label="@string/tfe_od_app_name"
            android:screenOrientation="portrait"
            tools:node="merge" />
    </application>

</manifest>